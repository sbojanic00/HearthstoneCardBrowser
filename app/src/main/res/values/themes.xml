<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HearthstoneCardBrowser" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_lava</item>
        <item name="colorPrimaryVariant">@color/beer</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SplashScreenTheme" parent="Theme.HearthstoneCardBrowser">
        <item name="android:textSize">@dimen/splash_text_size</item>
        <item name="android:fontFamily">@font/lhf_uncial_caps</item>
        <item name="android:navigationBarColor">@color/white</item>
    </style>

</resources>